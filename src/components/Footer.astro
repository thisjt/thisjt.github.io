---
const today = new Date();
import SocialLinks from './SocialLinks.astro';
---

<footer>
	&copy;&nbsp;{today.getFullYear()}&nbsp;Joshua&nbsp;Tahanlangit. All&nbsp;rights&nbsp;reserved.
	<SocialLinks />
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background-color: rgba(var(--footer-background-color-rgb), 0.8);
		color: var(--footer-text-color);
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--social-color);
	}
	.social-links a:hover {
		color: var(--social-color-hover);
	}
</style>
