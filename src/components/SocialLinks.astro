---
interface Props {
	footer: boolean;
}

const { footer } = Astro.props;
---
<div class="social-links" data-hide={!footer}>
	<a title="thisjt's GitHub Profile" href="https://github.com/thisjt" class="fab fa-github" target="_blank"></a>
	<a title="thisjt's LinkedIn Profile" href="https://www.linkedin.com/in/thisjt/" class="fab fa-linkedin" target="_blank"></a>
	<a title="thisjt's Discord Profile" href="https://discordapp.com/users/174107703675846656" class="fab fa-discord" target="_blank"></a>
	<a title="thisjt's Stackoverflow Account" href="https://stackoverflow.com/users/2334332/thisjt" class="fab fa-stack-overflow" target="_blank"></a>
	<a title="thisjt's Public Email Address" href="mailto:contact@thisjt.me" class="fa fa-envelope" target="_blank"></a>
</div>
<style lang="scss">
	.social-links {
		&, & a {
			display: flex;
		}
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--social-color);
	}
	.social-links a:hover {
		color: var(--social-color-hover);
	}

	@media (max-width: 720px) {
		.social-links[data-hide] {
			display: none;
		}
	}
</style>